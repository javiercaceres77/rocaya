function get_url_id($str) {
	$search = array('%F1','%E1','%FA','%E9','%ED','%F3','+');
	$replace= array('n',  'a',  'u',  'e',  'i',  'o',  '_');
	
	return str_replace($search, $replace, urlencode(strtolower($str)));
}

